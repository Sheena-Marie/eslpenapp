<p id="notice"><%= notice %></p>

<h1>Class Profiles</h1>

<table>
  <thead>
    <tr>
      <th>Class Picture</th>
      <th>Class Language</th>
      <th>Average Age</th>
      <th>Class Location</th>
      <th>Number of Students</th>
      <th>Class Gender</th>
      <th>About the Class</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @profiles.each do |profile| %>
      <tr>
        <td><img src="<%= profile.avatar_url.to_s %>" width="25%"></td>
        <td><%= profile.language %></td>
        <td><%= profile.age %></td>
        <td><%= profile.location %></td>
        <td><%= profile.number_of_students %> </td>
        <td><%= profile.gender %></td>
        <td><%= truncate(profile.bio, :length => 80) %></td>
        <td><%= link_to 'Show', profile %></td>
        <td><%= link_to 'Edit', edit_profile_path(profile) %></td>
        <td><%= link_to 'Delete', profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

